---
import Github from './Icons/Github.astro';
import LinkedIn from './Icons/LinkedIn.astro';
import Twitter from './Icons/Twitter.astro';
import Link from './Link.astro';

const links: {
  href: string;
  Icon: any;
}[] = [
  {
    href: 'https://github.com/senbo1',
    Icon: Github,
  },
  {
    href: 'https://twitter.com/senbozzz',
    Icon: Twitter,
  },
  {
    href: 'https://www.linkedin.com/in/harshbhadu/',
    Icon: LinkedIn,
  },
];
---

<footer class="flex gap-4 border-t pt-2 border-neutral-500 justify-center">
  {
    links.map((link) => {
      const { href, Icon } = link;
      return (
        <Link {href} target="_blank" rel="noopener noreferrer">
          <Icon />
        </Link>
      );
    })
  }
</footer>
